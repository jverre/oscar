{
  "manifest_version": 3,
  "name": "Oscar",
  "version": "1.1.0",
  "description": "Share your ChatGPT conversations with Oscar. Type /share and press Enter to create a shareable link.",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Oscar - View Shared Chats"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "homepage_url": "https://www.getoscar.ai"
}